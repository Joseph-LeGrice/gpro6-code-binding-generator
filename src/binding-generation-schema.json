{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Binding Generation Configuration",
    "type": "object",
    "required": [
        "namespace",
        "outputCppDirectory",
        "outputCsDirectory",
        "fileBindings"
    ],
    "properties": {
        "namespace": {
            "type": "string"
        },
        "outputCppDirectory": {
            "type": "string"
        },
        "outputCsDirectory": {
            "type": "string"
        },
        "fileBindings": {
            "type": "array",
            "items": {
                "title": "File Configuration",
                "type": "object",
                "required": [
                    "nativeIncludePath",
                    "nativeClassName",
                    "managedClassName",
                    "methods",
                    "properties"
                ],
                "properties": {
                    "nativeIncludePath": {
                        "type": "string"
                    },
                    "nativeClassName": {
                        "type": "string"
                    },
                    "managedClassName": {
                        "type": "string"
                    },
                    "methods": {
                        "type": "array",
                        "items": {
                            "title": "Method Info",
                            "type": "object",
                            "required": [
                                "methodType",
                                "name",
                                "returnType",
                                "args"
                            ],"properties": {
                                "methodType": {
                                    "type": "string",
                                    "enum": [
                                        "instance",
                                        "static",
                                        "ivar"
                                    ]
                                },
                                "name": {
                                    "type": "string"
                                },
                                "returnType": {
                                    "type": "string"
                                },
                                "args": {
                                    "type": "string",
                                    "enum": [
                                        "void",
                                        "int",
                                        "float",
                                        "double",
                                        "char",
                                        "string"
                                    ]
                                }
                            }
                        }
                    },
                    "properties": {
                        "type": "array",
                        "items": {
                            "title": "Property Binding Info",
                            "type": "object",
                            "required": [
                                "getter",
                                "setter",
                                "name",
                                "nativeName",
                                "returnType"
                            ],"properties": {
                                "getter": {
                                    "type": "boolean"
                                },
                                "setter": {
                                    "type": "boolean"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "nativeName": {
                                    "type": "string"
                                },
                                "returnType": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}