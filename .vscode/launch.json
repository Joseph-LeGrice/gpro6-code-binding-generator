    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}\\dist\\main.js",
            "args": [
                "--input-directory", "${workspaceFolder}\\data\\json-config",
                "--output-cpp-directory", "${workspaceFolder}\\data\\cpp",
                "--output-cs-directory", "${workspaceFolder}\\data\\cs"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}